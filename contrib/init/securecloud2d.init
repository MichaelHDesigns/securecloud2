#!/bin/bash
#
#  securecloud2d The SecureCloud2 core server.
#
#
# chkconfig: 345 80 20
# description: securecloud2d
# processname: securecloud2d
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/securecloud2d, see below
if [ -f /etc/sysconfig/securecloud2d ]; then
        . /etc/sysconfig/securecloud2d
fi

RETVAL=0

prog=securecloud2d
# you can override the lockfile via BITCOIND_LOCKFILE in /etc/sysconfig/securecloud2d
lockfile=${BITCOIND_LOCKFILE-/var/lock/subsys/securecloud2d}

# securecloud2d defaults to /usr/bin/securecloud2d, override with BITCOIND_BIN
bitcoind=${BITCOIND_BIN-/usr/bin/securecloud2d}

# securecloud2d opts default to -disablewallet, override with BITCOIND_OPTS
bitcoind_opts=${BITCOIND_OPTS}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $bitcoind $bitcoind_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
